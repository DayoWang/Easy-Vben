<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easy.restful.sys.dao.SysDictMapper">
    <resultMap id="BaseResultMap" type="com.easy.restful.sys.model.SysDict">
        <id column="id" property="id"/>
        <result column="order_no" property="orderNo"/>
        <result column="p_code" property="pCode"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="icon" property="icon"/>
        <result column="tips" property="tips"/>
        <result column="css" property="css"/>
        <result column="status" property="status"/>
        <result column="dict_type" property="dictType"/>
        <result column="create_date" property="createDate"/>
        <result column="create_user" property="createUser"/>
        <result column="edit_user" property="editUser"/>
        <result column="edit_date" property="editDate"/>
    </resultMap>
    <resultMap id="select" type="com.easy.restful.common.core.common.select.Select">
        <result column="value" property="value"/>
        <result column="text" property="text"/>
    </resultMap>

    <select id="selectByDictType" resultMap="select">
        select code as value,name as text from sys_dict
        where dict_type = #{dictType} and status = #{status} order by id
    </select>
    <select id="getMaxOrderNo" resultType="java.lang.Integer">
        select ifnull(max(order_no), 0) from sys_dict t where t.dict_type = #{dictType}
    </select>
    <select id="select" resultType="com.easy.restful.sys.model.SysDict">
        select t.id,t.order_no,t.p_code,t.name,t.code,t.status,t.css,t.dict_type, dt.name as dict_type_name,ud.name as parent_name
        from sys_dict t
          left join sys_dict_type dt on t.dict_type = dt.type
          left join sys_dict ud on ud.id = t.p_code and t.dict_type = ud.dict_type
        <where>
            ${ew.sqlSegment}
        </where>
    </select>
    <select id="generateDictData" resultType="com.easy.restful.sys.model.SysDict">
        select code,p_code,name,dict_type,css,icon,tips from sys_dict t
        where t.status = #{status} order by dict_type, order_no
    </select>
</mapper>